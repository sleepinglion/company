<% breadcrumb :faqs %>
<div id="faq_main" class="container">
	<div class="row">
		<div class="col-xs-12 col-md-offset-4 col-md-9 col-md-pull-1 col-xl-offset-0 col-xl-pull-0 col-xl-12">
			<h2 class="col-xs-12"><%=t(:faq,scope:[:activerecord,:models]) %></h2>
			<p class="hidden-xs col-xs-12 description"><%=raw t(:faq_description) %></p>
			<div class="col-xs-12">
				<article>
					<ol id="faqCategoryList">
						<% unless faq_categories.empty? %>
						<% faq_categories.each do |faq_category| %>
						<li <% if(categoryId==faq_category.id) %> class="on"<% end %>>
							<%= link_to truncate(faq_category.title,:length => 20),faqs_path(:faq_category_id=>faq_category.id),{:class=>'title'} %>
						</li>
						<% end %>
					<% else %>
						<li><%=t(:no_data) %></li>
						<% end %>
					</ol>
				</article>
				<article>
					<dl id="faqList">
						<% unless faqs.empty? %>
						<% faqs.each do |faq| %>
						<dt<% if faq %><% if faq.id==faq.id %> class="on"<% end %><% end %>>
							<%= link_to truncate(faq.title,:length => 80), faq_path(faq),{:class=>'title'} %>
						</dt>
						<% if(faq_content)%>
						<% if(faq_content.id==faq.id) %>
						<dd><%=simple_format(faq_content.faq_content.content) %></dd>
						<% end %>
						<% end %>
						<% end %>
					<% else %>
						<dt><%=t(:no_data)%></dt>
						<% end %>
					</dl>
				</article>
			</div>
			<div class="pagination">
				<%= paginate faqs %>
			</div>
		</div>
	</div>
</div>
